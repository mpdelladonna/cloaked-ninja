package project0;

public class Cell {

	public boolean occupied;
	public boolean obstacle;
	public boolean vehicle;
	public boolean valid;
	
	public int elevation;
	public int cost;
	
	public String type;

	public Cell(boolean occupied, boolean obstacle, boolean vehicle,
			boolean valid, int elevation, int cost, String type) {
		super();
		this.occupied = occupied;
		this.obstacle = obstacle;
		this.vehicle = vehicle;
		this.valid = valid;
		this.elevation = elevation;
		this.cost = cost;
		this.type = type;
	}

	@Override
	public String toString() {
		return "Cell [elevation=" + elevation + ", cost=" + cost + ", type="
				+ type + "]";
	}

	public boolean isOccupied() {
		return occupied;
	}

	public void setOccupied(boolean occupied) {
		this.occupied = occupied;
	}

	public boolean isObstacle() {
		return obstacle;
	}

	public void setObstacle(boolean obstacle) {
		this.obstacle = obstacle;
	}

	public boolean isVehicle() {
		return vehicle;
	}

	public void setVehicle(boolean vehicle) throws InvalidContentException {
		if(vehicle && obstacle)
		{
			throw new InvalidContentException("this cell already contains an obstacle");
		}
		this.vehicle = vehicle;
	}

	public boolean isValid() {
		return valid;
	}

	public void setValid(boolean valid) {
		this.valid = valid;
	}

	public int getElevation() {
		return elevation;
	}

	public void setElevation(int elevation) {
		this.elevation = elevation;
	}

	public int getCost() {
		return cost;
	}

	public void setCost(int cost) {
		this.cost = cost;
	}

	public String getType() {
		return type;
	}

	public void setType(String type) {
		this.type = type;
	}
	
	
}
