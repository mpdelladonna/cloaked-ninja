	public List<Cell> getAdjacentCells(Point p)
	{
		List<Cell> temp = new ArrayList<Cell>();
		
		for(Point pp : p.getCardinalPoints())
		{
			temp.add(land[pp.x][pp.y]);
		}
		
		return temp;
	}
	
